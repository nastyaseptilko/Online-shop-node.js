<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Attention! </strong>Please do not leave fields blank during registration.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form action="/register" method="post">
    <div class="form-group ">
        {{#if  errorIsUser}}
            <div class="error"><span > {{errorIsUser}}</span></div>
        {{/if}}
        <label >First Name</label>
        <input type="text" name="firstName" placeholder="Inter your First Name, please" class="form-control" id="inputFirstName" required>
    </div>
    <div class="form-group ">
        <label >Last Name</label>
        <input type="text" name="lastName" placeholder="Inter your Last Name, please" class="form-control" id="inputLastName" required>
    </div>
    <div class="form-group ">
        <label >Phone number</label>
        <input type="text" name="phoneNumber" placeholder="Inter your Phone number, please" class="form-control" id="inputPhoneNumber" required>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" name="username" class="form-control" id="exampleInputEmail1"
               placeholder="Inter your email, please" aria-describedby="emailHelp" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" placeholder="Inter your password,please" class="form-control"
               id="exampleInputPassword1" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm password</label>
        <input type="password" name="confirm" placeholder="Confirm your password,please" class="form-control"
               id="exampleInputPassword2" required>
    </div>
    {{#if  error}}
        <div class="error"><span > {{error}}</span></div>
    {{/if}}
    <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <input type="text" name="city" placeholder="Inter your city, please" class="form-control" id="inputCity">
    </div>
    <button type="submit" id="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>